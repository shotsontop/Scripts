local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Beg To Escape Poverty", "DarkTheme")

local InfCashSection = Window:NewSection("Inf Cash")

local function giveInfiniteCash()
    game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("GiveQuestCash"):FireServer(math.huge, true)
end

local InfCashButton = InfCashSection:NewButton("Inf Cash", "Gives you infinite cash", giveInfiniteCash)

local MiscellaneousTab = Window:NewTab("Miscellaneous")
local MiscellaneousSection = MiscellaneousTab:NewSection("Miscellaneous")

local function executeInfiniteYieldScript()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
end

local InfiniteYieldButton = MiscellaneousSection:NewButton("Infinite Yield", "Executes Infinite Yield", executeInfiniteYieldScript)

local UIS = game:GetService("UserInputService")
_G.KeybindUI = "V"
local SettingsTab = Window:NewTab("Settings")
local SettingsSection = SettingsTab:NewSection("Change UI Keybind")
SettingsSection:NewTextBox("Toggle UI", "The Default Keybind is V, you can change it.", function(txt)
    _G.KeybindUI = string.upper(string.sub(txt, 1, 1))
end)

UIS.InputBegan:Connect(function(input, k)
    if k then return end
    if input.KeyCode == Enum.KeyCode[_G.KeybindUI] then
       Library:ToggleUI()
    end
end)

local CreditsTab = Window:NewTab("Credits")
local CreditsSection = CreditsTab:NewSection("Script Maker: Shots")
local CreditsSection2 = CreditsTab:NewSection("My Discord: kmlt")
local CreditsSection3 = CreditsTab:NewSection("My Biolinks: https://guns.lol/shots")
local CreditsSection4 = CreditsTab:NewSection("My Biolinks: https://feds.lol/shots")
